<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    
  
     <LinearLayout 
        android:id="@+id/barsss"
        android:layout_width="fill_parent"
    	android:layout_height="38dip"
  		android:layout_alignParentBottom="true"
    	android:gravity="center"    
        >
       
          <ImageView
            android:id="@+id/iv_userinfo"
             android:src="@drawable/tab_profile_focused"
             android:layout_width="wrap_content"
   			 android:layout_height="wrap_content"
   			 android:layout_weight="1"
   			 />
           <ImageView
            android:id="@+id/iv_mainpage"
            android:src="@drawable/tab_home_pressed"
             android:layout_width="wrap_content"
   			 android:layout_height="wrap_content"
   			 android:layout_weight="1"
   			 />
            <ImageView
            android:id="@+id/iv_message"
              android:src="@drawable/tab_message_normal"
             android:layout_width="wrap_content"
   			 android:layout_height="wrap_content"
   			 android:layout_weight="1"
   			 />
         
    </LinearLayout>
   
       <LinearLayout        
        android:id="@+id/body_view"
         android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_above="@id/barsss"
    	
        />
</RelativeLayout >
    
