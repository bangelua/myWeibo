<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_margin="6dip" 
    >
    
     <TextView
 	        android:id="@+id/weibo_text_in_one"	 	       	      	
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:textColor="#000000"
 	        android:textSize="16sp"
 	        android:layout_marginLeft="3dip"
 	        
 	        />

	<com.facebook.drawee.view.SimpleDraweeView
		android:id="@+id/weibo_picture_in_one"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_gravity="center_horizontal"
		fresco:actualImageScaleType="centerCrop"
		fresco:placeholderImage="@drawable/default_image_wait"
		fresco:roundedCornerRadius="5dp" />

 	    <RelativeLayout 
 	        android:id="@+id/weibo_msg_dialog_holder_in_one"
 	        android:layout_width="match_parent"
 	        android:layout_height="wrap_content"
 	        android:gravity="center"
 	         android:background="@drawable/retweet_msg" 	                
 	        >
 	    <TextView
 	        android:id="@+id/retweet_weibo_text_in_one"   
 	         android:layout_width="wrap_content"
 	        android:layout_height="wrap_content" 	        
 	        android:textColor="#000000" 	   
 	     	android:ellipsize="end"
 	        android:textSize="16sp"
 	        />

			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/retweet_weibo_picture_in_one"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_below="@id/retweet_weibo_text_in_one"
				android:layout_centerHorizontal="true"
				fresco:roundedCornerRadius="5dp"
				fresco:actualImageScaleType="centerCrop"
				fresco:placeholderImage="@drawable/default_image_wait"

				/>

			<!-- 原微博的时间和评论转发数量 -->
 	    	 <RelativeLayout
 	        android:layout_width="fill_parent"
 	        android:layout_height="wrap_content"
 	       
 	        android:layout_below="@id/retweet_weibo_picture_in_one"
 	        >
 	    <TextView 
 	        android:id="@+id/create_time_of_source_weibo"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:layout_alignParentLeft="true" 	  
 	        android:textColor="#9f36a0"      
 	        />
 	    
 	    <TextView 
 	        android:id="@+id/weibo_counts_of_source_weibo"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:layout_alignParentRight="true" 	 
 	        android:textColor="#9f36a0"         
 	        />
 	      
 	    </RelativeLayout>
 	    	        
 	    </RelativeLayout> 	   
 	    
 	    <RelativeLayout
 	        android:layout_width="fill_parent"
 	        android:layout_height="wrap_content" 	   
 	        
 	        >
 	    <TextView 
 	        android:id="@+id/source_from"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:layout_alignParentLeft="true" 	  
 	        android:textColor="#0099FF"   
 	        android:layout_marginLeft="3dip"   
 	        />
 	    
 	    <TextView 
 	        android:id="@+id/weibo_counts"
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:layout_alignParentRight="true" 	 
 	        android:textColor="#0099FF" 
 	        android:layout_marginRight="1dip"        
 	        />
 	      
 	    </RelativeLayout>
 	    
 	    
    

</LinearLayout>