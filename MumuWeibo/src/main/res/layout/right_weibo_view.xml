<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dip"
    android:layout_marginTop="5dip">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_user_profile_in_right"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentRight="true"
        fresco:placeholderImage="@drawable/defalut_profile_image"
        fresco:roundedCornerRadius="3dp" />

    <TextView
        android:id="@+id/tv_user_name_in_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_user_profile_in_right"
        android:layout_marginRight="3dip"
        android:layout_toLeftOf="@id/iv_user_profile_in_right"
        android:textColor="#9f36a0"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_weiboText_in_right_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_user_name_in_right"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"

        android:background="@drawable/weibodialog_right"
        android:text="null"
        android:textColor="#000000"
        android:textSize="16sp" />


</RelativeLayout>