<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:orientation="vertical" >
    
    <RelativeLayout    
        android:layout_width="fill_parent"       
        android:layout_height="42dip"     
        android:gravity="center" 	
        android:background="@drawable/btn_action_negative_focused"
        >
        
        <ImageView 
            android:id="@+id/iv_send_weibo_in_write"
            android:src="@drawable/ic_launcher"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:visibility="gone"
            
            />
        <TextView 
            android:text="写微博"
            android:textSize="18sp"
           android:textColor="#ff6600"
           android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_send_weibo_in_write"
            android:layout_alignBottom="@id/iv_send_weibo_in_write"
            />        
        
    </RelativeLayout>
    
     <EditText 
        android:id="@+id/edit_write_content"
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"            
        android:layout_weight="1"
        />
     
    <RelativeLayout            	
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <ImageButton
            android:id="@+id/iv_face_list"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/face"
        	android:layout_marginLeft="5dip"
        	android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true"
        	/>
        
        <ImageButton
            android:id="@+id/iv_get_pic"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/get_pic"
        	android:layout_marginLeft="5dip"
        	android:layout_toRightOf="@id/iv_face_list"
        	android:layout_centerVertical="true"
        	/>
            
      
        
     <Button 
        android:id="@+id/bt_send_weibo_in_write"
        android:text="发送"
        android:textSize="15sp"
        android:layout_marginRight="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"       
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        />
        <ImageView
        android:id="@+id/iv_showpic"
        android:gravity="center"
        android:layout_width="50dip"
        android:layout_height="50dip"          
        android:visibility="gone"      
        android:layout_toLeftOf="@id/bt_send_weibo_in_write"   
        android:layout_marginRight="10dip" 
        />   
     </RelativeLayout>
     
   

</LinearLayout>

